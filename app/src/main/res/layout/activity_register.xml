<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <!--  Le logo de l'application  -->
    <ImageView
        android:id="@+id/logoMaisonneuve"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logoazul"/>

    <EditText
        android:id="@+id/fullnameTextID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/logoMaisonneuve"
        android:padding="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:hint="Nom Complet"/>

    <EditText
        android:id="@+id/usernameTextID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/fullnameTextID"
        android:padding="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:hint="Nom utilisateur"/>

    <EditText
        android:id="@+id/passwordTextID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextID"
        android:padding="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        android:hint="Mot de passe"/>

    <!-- Bouton de connexion -->
    <Button
        android:id="@+id/registerButtonID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextID"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="Creer Compte"
        />

    <!-- Lien se connecter -->
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deja membre? Se connecter"
        android:textSize="14sp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="32dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/forgotPasswordText"
        app:layout_constraintTop_toBottomOf="@id/registerButtonID"/>

    <!-- Lien mot de passe oublie -->
    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe oubliÃ©?"
        android:textSize="14sp"
        android:layout_marginTop="48dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/registerText"
        app:layout_constraintTop_toBottomOf="@id/registerButtonID"/>
</androidx.constraintlayout.widget.ConstraintLayout>