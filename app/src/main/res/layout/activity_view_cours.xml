<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Imagen del curso -->
    <ImageView
        android:id="@+id/imageCours"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/courseimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título del curso -->
    <TextView
        android:id="@+id/nomcourstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Drawing"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/imageCours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Descripción del curso -->
    <TextView
        android:id="@+id/siglecourstext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This course covers basic drawing techniques.dfjdihfefdjjksdfndjkbvldfvjlfjslsdfjlfdkbvsdf;kjbd;skjfbdjfk  vidfvdfvdfv dvdf vf dfvfvjsdfjdfj;dfjhbvdfjvdfvj;df.."
        android:backgroundTint="@color/gray"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/nomcourstext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Fecha de inicio y fin -->
    <EditText
        android:id="@+id/sessioncours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start: Jan 1, 2024 - End: March 1, 2024"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/siglecourstext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Nombre del profesor -->
    <EditText
        android:id="@+id/enseignanttext"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor: John Doe"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/sessioncours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón para descargar material del curso -->
    <Button
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Course Material"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/enseignanttext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
