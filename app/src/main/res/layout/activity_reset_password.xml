<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <include layout="@layout/toolbar"/>


    <ImageView
        android:id="@+id/logoMaisonneuve"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logoazul"/>


    <EditText
        android:id="@+id/emailTextID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/logoMaisonneuve"
        android:padding="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text"
        android:hint="Entrez votre adresse e-mail"/>

       <!-- Bouton de connexion -->
    <Button
        android:id="@+id/resetPasswordID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTextID"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="Reinitialiser le mot de passe"
        />

    <!-- Lien s'inscrire -->
    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pas de compte? S'inscrire"
        android:textSize="14sp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/loginText"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordID"/>

    <!-- Lien mot de passe oublie -->
    <!-- Lien se connecter -->
    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deja membre? Se connecter"
        android:textSize="14sp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/registerText"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordID"/>


</androidx.constraintlayout.widget.ConstraintLayout>