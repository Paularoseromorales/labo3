<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CourseActivity">

        <ImageView
            android:id="@+id/logoMaisonneuve"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logoazul"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre :"
            android:layout_below="@+id/logoMaisonneuve"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/nomcourstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Saisissez le titre du cours             "
            android:layout_below="@id/logoMaisonneuve"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            android:padding="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_below="@+id/nomcourstext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/siglecourstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Saisissez la description du cours"
            android:layout_below="@id/nomcourstext"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edittext_background"
            android:padding="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enseignant:"
            android:layout_below="@+id/siglecourstext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/enseignanttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Saisissez le de l'enseignant         "
            android:layout_below="@id/siglecourstext"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edittext_background"
            android:padding="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debut - Fin :"
            android:layout_below="@+id/enseignanttext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/sessioncours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Saisissez la Date debut-fin          "
            android:layout_below="@id/enseignanttext"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edittext_background"
            android:padding="16dp"/>
        
        <LinearLayout
            android:id="@+id/botones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sessioncours"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

        <!-- Botón para seleccionar la imagen -->
            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sélectionner une Image"
                android:backgroundTint="@color/blue"
                android:layout_below="@id/sessioncours"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>



            <!-- Botón para seleccionar el archivo -->
            <Button
                android:id="@+id/selectFileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Sélectionner un fichier"
                android:layout_below="@id/imageNameTextView"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/botones"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
        <!-- TextView para mostrar el nombre de la imagen seleccionada -->
            <TextView
                android:id="@+id/imageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/botones"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:text="Aucune image sélectionnée"
                android:textSize="14sp"/>

            <!-- TextView pour afficher le nom du fichier sélectionné -->
            <TextView
                android:id="@+id/fileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/botones"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:text="Aucun fichier sélectionné"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter Cours"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/blue"
            android:layout_below="@id/avis"
            android:layout_marginTop="16dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addcourse"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>
</ScrollView>